{
  "name": "zoo",
  "version": "0.1.10",
  "description": "Cross-platform environment variables",
  "author": "Jason Maurer",
  "license": "MIT",
  "homepage": "https://github.com/jsonmaur/zoo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsonmaur/zoo.git"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    ".env",
    "env",
    "environment",
    "variables",
    "config",
    "settings",
    "cross",
    "platform",
    "dotenv"
  ],
  "files": [
    "bin/",
    "lib/",
    "license",
    "readme.md"
  ],
  "main": "lib/index.js",
  "bin": {
    "zoo": "bin/zoo"
  },
  "scripts": {
    "test:lint": "standard --verbose | snazzy",
    "test:unit": "rm -rf .nyc_output coverage && nyc ava src/**/*.test.js -a",
    "test:coverage": "nyc report -r=lcov",
    "test": "npm-run-all test:*",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "build": "rm -rf lib && babel src -d lib --no-comments",
    "watch": "npm run build -- -w",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "ava": "0.16.0",
    "babel-cli": "6.14.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "6.14.0",
    "coveralls": "2.11.12",
    "mock-fs": "3.11.0",
    "npm-run-all": "3.1.0",
    "nyc": "8.1.0",
    "proxyquire": "1.7.10",
    "sinon": "1.17.5",
    "snazzy": "4.0.1",
    "standard": "8.0.0"
  },
  "dependencies": {
    "cross-spawn": "4.0.0",
    "minimist": "1.2.0",
    "object-path": "0.11.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "nyc": {
    "require": "babel-register",
    "include": [
      "src"
    ]
  }
}
