{
  "name": "zoo",
  "version": "0.1.6",
  "description": "Cross-platform environment variables",
  "author": "Jason Maurer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsonmaur/zoo.git"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    ".env",
    "env",
    "environment",
    "variables",
    "config",
    "settings",
    "cross",
    "platform",
    "dotenv"
  ],
  "files": [
    "bin/",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "main": "lib/index.js",
  "bin": {
    "zoo": "bin/zoo"
  },
  "scripts": {
    "test:lint": "standard --verbose | snazzy",
    "test:unit": "rm -rf .nyc_output coverage && nyc ava -a",
    "test:coverage": "nyc report -r=lcov",
    "test": "npm-run-all test:*",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "build": "rm -rf lib && babel src -d lib --no-comments",
    "watch": "npm run build -- -w",
    "prepublish": "npm test && npm run build"
  },
  "devDependencies": {
    "ava": "0.15.2",
    "babel-cli": "6.11.4",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-stage-2": "6.11.0",
    "babel-register": "6.9.0",
    "coveralls": "2.11.11",
    "npm-run-all": "2.3.0",
    "nyc": "7.0.0",
    "proxyquire": "1.7.10",
    "sinon": "1.17.4",
    "snazzy": "4.0.0",
    "standard": "7.1.2"
  },
  "dependencies": {
    "cross-spawn": "4.0.0",
    "minimist": "1.2.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "nyc": {
    "require": "babel-register",
    "include": [
      "src"
    ]
  }
}
